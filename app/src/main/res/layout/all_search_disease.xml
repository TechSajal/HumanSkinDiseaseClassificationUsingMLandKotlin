<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/rv_all_search_disease"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin ="2dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_all_search_disease"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/sajal_scan"
        app:shapeAppearanceOverlay="@style/common" />

    <TextView
        android:id="@+id/name_all_search_disease"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/varela_round"
        android:text="Acnge"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/disc_all_search_disease"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/name_all_search_disease"
        android:layout_marginStart="105dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/varela_round"
        android:maxLines="2"
        android:text="Acne is a skin condition that occurs when your hair follicles become plugged with oil and dead skin cells. It causes whiteheads, blackheads or pimples. Acne is most common among teenagers, though it affects people of all ages"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/causes_all_search_disease"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@+id/disc_all_search_disease"
        android:layout_marginStart="105dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/varela_round"
        android:maxLines="1"
        android:text="Excess oil (sebum) production"
        android:textColor="#2BD833"
        android:textSize="10dp" />
</RelativeLayout>